<%- include('partials/header') %>

<div class="container register-container">
    <h1>Create A New Account</h1>
    <div>
        <form action="/register" method="POST" class="register-form">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" placeholder="Password" id="passwd" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPasswd" onchange="onConfirmPasswordChange()" required>
            </div> 
            <div class="form-group password-error" id="error-box">
                <h4><i class="far fa-times-circle" style="color: red;"></i> Password and Confirm Password did not match </h4>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-lg" value="Create" id="submit-btn">
            </div>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>


<%- include('partials/footer') %>